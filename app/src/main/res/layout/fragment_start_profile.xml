<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ru.example.beautysalon.ui.view.profile.StartProfileFragment">
    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="64dp"
        android:id="@+id/fragment_startProfile_logo"
        android:src="@drawable/lotus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_startProfile_salon_name"
        app:layout_constraintTop_toBottomOf="@id/fragment_startProfile_logo"
        android:text="@string/salon_name"
        android:gravity="center"
        android:layout_margin="16dp"
        style="@style/TextAppearance.Material3.HeadlineLarge"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_startProfile_textField_phone"
        app:layout_constraintTop_toBottomOf="@id/fragment_startProfile_salon_name"
        style="@style/Widget.Material3.TextInputEditText.FilledBox"
        android:hint="@string/phone">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/fragment_startProfile_button_signIn"
        app:layout_constraintTop_toBottomOf="@id/fragment_startProfile_textField_phone"
        style="@style/Widget.Material3.Button"
        android:text="Войти"/>
</androidx.constraintlayout.widget.ConstraintLayout>